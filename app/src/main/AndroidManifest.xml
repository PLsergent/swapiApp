            android:name=".Spaceships"
            android:label="@string/title_activity_spaceships" />
        <activity
            android:name=".Vehicles"
            android:label="@string/title_activity_vehicles" />
        <activity
            android:name=".People"
            android:label="@string/title_activity_people" />
        <activity
            android:name=".Films"
            android:label="@string/title_activity_films" />
        <activity
            android:name=".Species"
            android:label="@string/title_activity_species"></activity>
